/* 水平间距 */
.slider-box {
  display: flex;
  width: 100%;
  height: 32rpx;
  position: relative;
}
.slider-box::before {
  content: '';
  position: absolute;
  height: 8rpx;
  border-radius: 8rpx;
  background-color: #EEEEEE;
  top: 50%;
  left: 0;
  -webkit-transform: translateY(-50%);
          transform: translateY(-50%);
  width: 100%;
}
.slider-box .sliderBar {
  height: 100%;
  border-radius: 8rpx;
  width: 100%;
}
.slider-box .sliderBar .gone {
  background-color: #EA2000;
  height: 100%;
  position: absolute;
  left: 0;
  height: 8rpx;
  top: 12rpx;
  max-width: 100%;
  z-index: 1;
  border-radius: 0 8rpx 8rpx 0;
}
.slider-box .sliderBar .slider {
  width: 0;
  height: 100%;
  position: relative;
  z-index: 2;
}
.slider-box .sliderBar .slider::after {
  content: '';
  position: absolute;
  border-radius: 16rpx;
  background-color: #EA2000;
  width: 32rpx;
  height: 100%;
  -webkit-transform: translatex(-50%);
          transform: translatex(-50%);
}
.slider-box .sliderBar .slider text {
  position: absolute;
  width: 60rpx;
  color: white;
  border-radius: 14rpx;
  top: -140%;
  left: 50%;
  text-align: center;
  -webkit-transform: translateX(-50%);
          transform: translateX(-50%);
  background-color: #EA2000;
}
.slider-box .sliderBar .slider text::after {
  content: '';
  position: absolute;
  border: 6rpx solid transparent;
  border-top-color: #EA2000;
  top: 99%;
  left: 50%;
  -webkit-transform: translateX(-50%);
          transform: translateX(-50%);
}

